{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2020",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["@types/jest", "node"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "noEmit": true,
  "lib": ["ES2019"],
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
